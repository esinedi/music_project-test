#menuId .menuIdTop {
  width: 100%;
  height: 220px;
  position: relative;
  box-sizing: border-box;
  overflow: hidden;
}
#menuId .menuIdTop .menuIdTopBack {
  box-sizing: border-box;
  overflow: hidden;
  width: 100%;
  height: 220px;
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: -1;
  -webkit-filter: blur(5rpx);
  filter: blur(15rpx) brightness(100%);
  -webkit-transform: scale(1.2);
          transform: scale(1.2);
}
#menuId .menuIdTop .menuIdTopOver {
  position: absolute;
  height: 100%;
  width: 220%;
  top: 0;
  background: rgba(0, 0, 0, 0.1);
  z-index: -1;
  opacity: 0.5;
}
#menuId .menuIdTop .menuIdTopMain {
  position: absolute;
  left: 20px;
  top: 60px;
  padding: 5px;
  display: flex;
  flex-direction: row;
}
