#mineDetail {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
#mineDetail .mineDetailTop {
  width: 100%;
  border-top: 1px solid #F2F2F0;
  border-bottom: 1px solid #F2F2F0;
  padding: 20px;
}
#mineDetail .mineDetailTop .mineDetailTopUser {
  display: flex;
  flex-direction: row;
  margin-bottom: 25px;
}
#mineDetail .mineDetailTop .mineDetailTopUser .mineDetailTopUserImg {
  width: 30px;
  border-radius: 100%;
  margin-right: 20px;
}
#mineDetail .mineDetailTop .mineDetailTopUser .mineDetailTopUserName {
  height: 30px;
  line-height: 30px;
  text-align: center;
}
#mineDetail .mineDetailTop .mineDetailTopMach {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
#mineDetail .mineDetailTop .mineDetailTopMach .mineDetailTopMachItem {
  width: 25%;
}
#mineDetail .mineDetailTop .mineDetailTopMach .mineDetailTopMachItem .mineDetailTopMachItemImg {
  width: 50%;
  display: inline-block;
  margin-left: 25%;
}
#mineDetail .mineDetailTop .mineDetailTopMach .mineDetailTopMachItem .mineDetailTopMachItemP {
  text-align: center;
}
#mineDetail .mineDetailTopTwo {
  width: 100%;
  border-bottom: 1px solid #F2F2F0;
  padding: 15px;
  display: flex;
  flex-direction: row;
}
#mineDetail .mineDetailTopTwo .mineDetailTopTwoImg {
  height: 20px;
  margin-right: 10px;
}
#mineDetail .mineDetailMain {
  width: 100%;
  border-bottom: 1px solid #F2F2F0;
  padding: 15px;
}
#mineDetail .mineDetailMain .mineDetailMainItem {
  display: flex;
  flex-direction: row;
  padding: 15px 0px;
}
#mineDetail .mineDetailMain .mineDetailMainItem .mineDetailMainItemImg {
  height: 20px;
  margin-right: 10px;
}
#mineDetail .mineDetailMain .mineDetailMainItem:first-child {
  padding-top: 0px;
}
#mineDetail .mineDetailMain .mineDetailMainItem:last-child {
  padding-bottom: 0px;
}
#mineDetail .mineDetailMainTwo {
  width: 100%;
  border-bottom: 1px solid #F2F2F0;
  padding: 15px;
  display: flex;
  flex-direction: row;
}
#mineDetail .mineDetailMainTwo .mineDetailMainTwoImg {
  height: 20px;
  margin-right: 10px;
}
#mineDetail .mineDetailFooter {
  flex-grow: 1;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
#mineDetail .mineDetailFooter .mineDetailFooterItem {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  border-right: 1px solid #F2F2F0;
}
#mineDetail .mineDetailFooter .mineDetailFooterItem .mineDetailFooterItemMain {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
#mineDetail .mineDetailFooter .mineDetailFooterItem .mineDetailFooterItemMain .mineDetailFooterItemMainImg {
  height: 20px;
}
#mineDetail .mineDetailFooter .mineDetailFooterItem:last-child {
  border-right: 0px;
}

