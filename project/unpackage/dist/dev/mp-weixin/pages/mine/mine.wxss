#mine {
  width: 100%;
  background-color: #F2F2F0;
  padding-bottom: 70px;
}
#mine .mineMainTop {
  width: 100%;
  background-color: #F2F2F0;
  padding: 15px 10px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
#mine .mineTop {
  width: 90%;
  height: 50px;
  margin: 0 auto;
}
#mine .mineTop .mineTopImg {
  width: 15%;
  border-radius: 100%;
  float: left;
  margin-right: 7%;
}
#mine .mineTop .mineTopName {
  height: 50px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
#mine .mineTop .mineTopName .mineTopNameP1 {
  font-weight: bold;
}
#mine .mineTop .mineTopName .mineTopNameLevel {
  width: 40px;
  font-size: 10px;
  background-color: white;
  text-align: center;
  border-radius: 8px;
}
#mine .mineIcons {
  width: 90%;
  margin: 0 5%;
  background-color: white;
  border-radius: 10px;
  margin-top: 20px;
  padding: 20px;
  padding-bottom: 10px;
}
#mine .mineIcons .mineIconsMain {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  flex-wrap: wrap;
  text-align: center;
}
#mine .mineIcons .mineIconsMain .mineIcon {
  width: 23%;
  margin-bottom: 10px;
}
#mine .mineIcons .mineIconsMain .mineIcon .mineIconImg {
  width: 60%;
}
#mine .mineIcons .mineIconsMain .mineIcon .mineIconP {
  font-size: 13px;
}
#mine .mineFaviates {
  width: 90%;
  margin: 0 5%;
  background-color: white;
  border-radius: 10px;
  margin-top: 20px;
  padding: 15px;
}
#mine .mineFaviates .mineFaviatesHeader {
  font-size: 12px;
  margin-bottom: 10px;
  color: gray;
}
#mine .mineFaviates .mineFaviatesMain {
  width: 100%;
  height: 50px;
  margin-bottom: 10px;
}
#mine .mineFaviates .mineFaviatesMain .mineFaviatesMainImg {
  height: 50px;
  border-radius: 10px;
  float: left;
  margin-right: 15px;
}
#mine .mineFaviates .mineFaviatesMain .mineFaviatesMainP {
  height: 50px;
  float: left;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
#mine .mineFaviates .mineFaviatesMain .mineFaviatesMainP .mineFaviatesMainP1 {
  font-weight: bold;
}
#mine .mineFaviates .mineFaviatesMain .mineFaviatesMainP .mineFaviatesMainP2 {
  font-size: 13px;
}
#mine .mineFaviates .mineFaviatesMain:last-child {
  margin-bottom: 0px;
}

